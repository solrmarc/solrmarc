                    <if >
                        <length string="${custom.jar.name.jar}" when="gt" length="0" />
                        <then>
                            <property name="add.lib.to.custom.jar.line" value="|lib" />
                        </then>
                        <else>
                            <property name="add.lib.to.custom.jar.line" value="lib" />
